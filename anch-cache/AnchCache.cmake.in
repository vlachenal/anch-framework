## Anch cache configuration +
# Anch utils path
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc" CACHE STRING "AnCH utils include directory")
set(ANCH_UUID_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/inc")
set(ANCH_UUID_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/build/lib")

set(ANCH_CACHE_COMPILE_FLAGS "-O2 -march=native -pipe" CACHE STRING "Additional compilation flags")
#set(ANCH_CACHE_COMPILE_FLAGS "-g" CACHE STRING "Additional compilation flags")

set(ANCH_CPU_AES OFF CACHE BOOL "Activate native AES support")
set(ANCH_CPU_DETECTION ON CACHE BOOL "Activate CPU features detection")

# Install path
set(ANCH_CACHE_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_CACHE_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_CACHE_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_CACHE_UNITARY_TEST ON CACHE BOOL "Anch CACHE unit tests")
