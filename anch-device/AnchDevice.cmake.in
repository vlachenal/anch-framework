## Anch device configuration +
# Anch device installation configuration
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc")
set(ANCH_UUID_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/inc")
set(ANCH_UUID_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/build/lib")

set(ANCH_DEVICE_COMPILE_FLAGS "-O2 -pipe -march=native")
#set(ANCH_DEVICE_COMPILE_FLAGS "-g")

# Install path
set(ANCH_DEVICE_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_DEVICE_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_DEVICE_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_DEVICE_UNITARY_TEST ON CACHE BOOL "Anch device unitary tests")
