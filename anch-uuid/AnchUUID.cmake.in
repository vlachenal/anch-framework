## Anch UUID configuration +
# Anch utils path
set(ANCH_DEVICE_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-device/inc")
set(ANCH_DEVICE_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-device/build/lib")
set(ANCH_CRYPTO_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-crypto/inc")
set(ANCH_CRYPTO_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-crypto/build/lib")

set(ANCH_UUID_COMPILE_FLAGS "-O2 -march=native -pipe" CACHE STRING "Additional compilation flags")
