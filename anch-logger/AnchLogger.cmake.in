## Anch logger configuration +
# Anch resource path
set(ANCH_RESOURCE_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-resource/inc")
set(ANCH_RESOURCE_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-resource/build/lib")
set(ANCH_DATE_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-date/inc")
set(ANCH_DATE_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-date/build/lib")
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc")

# Anch logger installation configuration
set(ANCH_LOGGER_COMPILE_FLAGS "-O2 -march=native -pipe")
#set(ANCH_LOGGER_COMPILE_FLAGS "-g")

# Install path
set(ANCH_LOGGER_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_LOGGER_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_LOGGER_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_UT_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/inc")
set(ANCH_UT_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/build/lib")

set(ANCH_CLI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/inc")
set(ANCH_CLI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/build/lib")

set(ANCH_LOGGER_UNITARY_TEST ON CACHE BOOL "Anch logger unitary tests")
