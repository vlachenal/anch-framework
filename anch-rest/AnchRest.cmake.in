## Anch rest configuration +
# Anch utils path
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc" CACHE STRING "AnCH utils include directory")
set(ANCH_UUID_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/inc")
set(ANCH_UUID_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-uuid/build/lib")
set(ANCH_JSON_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-json/inc")
set(ANCH_JSON_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-json/build/lib")
set(ANCH_CRYPTO_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-crypto/inc")
set(ANCH_CRYPTO_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-crypto/build/lib")
set(ANCH_UT_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/inc")
set(ANCH_UT_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/build/lib")
set(ANCH_CLI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/inc")
set(ANCH_CLI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/build/lib")

set(ANCH_REST_COMPILE_FLAGS "-O2 -march=native -pipe" CACHE STRING "Additional compilation flags")
#set(ANCH_CRYPTO_COMPILE_FLAGS "-g" CACHE STRING "Additional compilation flags")

# Install path
set(ANCH_REST_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_REST_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Libraries selection
set(ANCH_REST_SERVER_LIB ON CACHE BOOL "Build server library")
set(ANCH_REST_NGINX_LIB ON CACHE BOOL "Build server nginx implementation library")
set(ANCH_REST_CLIENT_LIB ON CACHE BOOL "Build client library")
set(ANCH_REST_CURL_LIB ON CACHE BOOL "Build client CURL implementation library")

# Static library build
set(ANCH_REST_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_REST_UNITARY_TEST ON CACHE BOOL "Anch crypto unitary tests")
## Anch rest configuration -
