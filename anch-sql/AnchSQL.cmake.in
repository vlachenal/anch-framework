## Anch SQL configuration +
# Anch utils path
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc")
set(ANCH_RES_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-resource/inc")
set(ANCH_RES_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-resource/build/lib")

# Anch SQL installation configuration
set(ANCH_SQL_COMPILE_FLAGS "-O2 -march=native -pipe")
#set(ANCH_SQL_COMPILE_FLAGS "-g")

## SQL database engines +
set(ANCH_SQL_MYSQL ON CACHE BOOL "AnCH MySQL support")
set(ANCH_SQL_POSTGRESQL ON CACHE BOOL "AnCH PostgreSQL support")
set(ANCH_SQL_SQLITE3 ON CACHE BOOL "AnCH SQLite3 support")
## SQL database engines -

# Install path
set(ANCH_SQL_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_SQL_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_SQL_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_SQL_UNITARY_TEST ON CACHE BOOL "Anch SQL unitary tests")
## Anch SQL configuration -
