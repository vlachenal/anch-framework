## Anch network configuration +
# Anch resource path
set(ANCH_EVENTS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-events/inc")
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc")
set(ANCH_CUTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cutils/inc")
set(ANCH_CUTILS_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cutils/build/lib")

set(ANCH_NETWORK_COMPILE_FLAGS "-O2 -pipe -march=native")
#set(ANCH_NETWORK_COMPILE_FLAGS "-g")

# Install path
set(ANCH_NETWORK_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_NETWORK_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_NETWORK_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_NETWORK_UNITARY_TEST ON CACHE BOOL "Anch network unitary tests")
