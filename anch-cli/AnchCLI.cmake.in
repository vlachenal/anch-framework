## Anch CLI configuration +
set(ANCH_CLI_COMPILE_FLAGS "-O2 -march=native -pipe" CACHE STRING "Additional compilation flags")
#set(ANCH_CLI_COMPILE_FLAGS "-g" CACHE STRING "Additional compilation flags")

# Install path
set(ANCH_CLI_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_CLI_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_CLI_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_CLI_UNITARY_TEST ON CACHE BOOL "Anch CLI unitary tests")
