## Anch date configuration +
# Anch date installation configuration
set(ANCH_DATE_COMPILE_FLAGS "-O2 -march=native -pipe")
#set(ANCH_DATE_COMPILE_FLAGS "-g")

set(ANCH_CLI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/inc")
set(ANCH_CLI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/build/lib")

set(ANCH_UT_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/inc")
set(ANCH_UT_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/build/lib")


# Install path
set(ANCH_DATE_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_DATE_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_DATE_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_DATE_UNITARY_TEST ON CACHE BOOL "Anch date unitary tests")
