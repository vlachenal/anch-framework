## Anch conf configuration +
# Anch utils path
set(ANCH_UTILS_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-utils/inc")

# Compilation flag
set(ANCH_CONF_COMPILE_FLAGS "-O2 -march=native -pipe" CACHE STRING "Additional compilation flags")
#set(ANCH_CONF_COMPILE_FLAGS "-g" CACHE STRING "Additional compilation flags")

# Install path
set(ANCH_CONF_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_CONF_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_CONF_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_UT_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/inc")
set(ANCH_UT_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-ut/build/lib")

set(ANCH_CLI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/inc")
set(ANCH_CLI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/build/lib")

set(ANCH_INI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-ini/inc")
set(ANCH_INI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-ini/build/lib")

set(ANCH_CONF_UNITARY_TEST ON CACHE BOOL "Anch conf unitary tests")
## Anch conf configuration -
