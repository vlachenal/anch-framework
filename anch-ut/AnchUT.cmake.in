## Anch unit configuration +
# Anch utils path
set(ANCH_CLI_INCLUDES_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/inc")
set(ANCH_CLI_LIBRARY_DIR "$ENV{HOME}/projects/anch-framework/anch-cli/build/lib")

# Anch unit installation configuration
set(ANCH_UNIT_COMPILE_FLAGS "-O2")
#set(ANCH_UNIT_COMPILE_FLAGS "-g")

# Install path
set(ANCH_UNIT_INSTALL_INC_DIR "/usr/local/include/anch" CACHE STRING "Header installation path")
set(ANCH_UNIT_INSTALL_LIB_DIR "/usr/local/lib/" CACHE STRING "Libraries installation path")

# Static library build
set(ANCH_UNIT_STATIC_LIB OFF CACHE BOOL "Build static library")

# Unitary tests
set(ANCH_UNIT_UNITARY_TEST ON CACHE BOOL "Anch unit unit tests")
